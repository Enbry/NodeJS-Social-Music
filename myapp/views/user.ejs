<% include partials/header %>
<div class="container">

  <div class="row account">
    <div class="col s10 offset-s2">
      <div class="col s12">
        <h1 class="center">MON COMPTE</h1>
      </div>
      <div class="row">

        <div class="col s4 offset-s1">
          <div class="col s6">
            <img src="../img/chart.jpg" alt="" class="responsive-img"> <!-- notice the "circle" class -->

          </div>
          <div class="col s6">
            <h3 class="black-text">
              <%= account.username %>
            </h3>
            <h5 class="black-text">
              <em><%= account.displayName %></em>
            </h5>
          </div>
          <% if (user._id == account._id) { %>

              <button form="deleteAll" type="submit" class="waves-effect waves-light btn btn-large light-blue lighten-1"><i class="material-icons right">delete_sweep</i>Supprimer tous les favoris
              </button>
            <form id="deleteAll" action="/songs/all/favorites?_method=delete" method="post"></form>
          <% } %>
        </div>
        <% if (user._id == account._id) { %>
        <div class="col s6 offset-s1">


            <table class="bordered">
                <thead>
                    <tr>
                        <th class="center">Chanson</th>
                        <th class="center">DÃ©tails</th>
                        <th class="center">Supprimer</th>
                    </tr>
                </thead>
                <% account.favoriteSongs.forEach(function(song) {%>
                    <tr id="song-<%= song %>">
                        <td class="center"><%= song %></td>
                        <td class="center"><a href="/songs/<%= song %>" class="btn-floating btn-large"><i class="material-icons">link</i></a></td>
                        <td class="center">
                            <form action="/songs/<%=song%>/favorites?_method=delete" method="post">
                               <button type="submit" class="btn-floating btn-large"><i class="material-icons">delete_forever</i></button>
                            </form>

                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>

      </div>
    </div>
  </div>
</div>
<% } %>

<% include partials/footer %>
