<% include partials/header %>
<div class="row">

    <div class="col s7 offset-s2 playlist">
      <div class="col s12">
        <h1 class="left">MUSITHÈQUE</h1>
      </div>
      <div class="col s3">
        <img src="../img/chart.jpg" alt="" class="responsive-img"> <!-- notice the "circle" class -->
      </div>
      <div class="col s5 ">
        <h3 class="black-text">
          Playlist
        </h3>
        <h5 class="black-text">
          <em><%= songs.length %> chansons trouvée<% if (songs.length > 1){%>s<%}%></em>
        </h5>
        <% if (user_admin) { %><a href="/songs/add"class="waves-effect waves-light btn light-blue lighten-1"><i class="material-icons right">library_add</i>Ajouter une chanson</a><% } %>
      </div>


      <table class="bordered">
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Album</th>
                  <th>Artist</th>
                  <th>Year</th>
                  <th>BPM</th>
              </tr>
          </thead>
          <% songs.forEach(function(song) {%>
              <tr>
                  <td>
                      <a href="/songs/<%=song._id%>"><%=song.title%></a>
                  </td>
                  <td><%=song.album%></td>
                  <td><%=song.artist%></td>
                  <td>
                      <% if (song.year) { %><%=song.year%><% } %>
                  </td>
                  <td>
                      <% if (song.bpm) { %><%=song.bpm%><% } %>
                  </td>
              </tr>
          <% }) %>
      </table>
    </div>
    <div class="col s2 offset-s1 song-search">
        <h4 class="center">Chercher une chanson</h4>

        <form id="search" class="form-inline" action="/songs" method="get">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>

            <div class="form-group">
                <label for="album">Album</label>
                <input type="text" class="form-control" id="album" name="album">
            </div>

            <div class="form-group">
                <label for="artist">Artist</label>
                <input type="text" class="form-control" id="artist" name="artist">
            </div>

            <div class="form-group">
                <label for="year">Année</label>
                <input type="number" class="form-control" id="year" name="year">
            </div>

            <div class="form-group">
                <label for="bpm">BPM</label>
                <input type="number" class="form-control" id="bpm" name="bpm">
            </div>
            <button form="search" type="submit" class="waves-effect waves-light btn light-blue lighten-1"><i class="material-icons right">search</i>Rechercher</button>
        </form>
    </div>
</div>
<% include partials/footer %>
