<% include partials/header %>
<div class="row">

  <div class="col s7 offset-s2 playlist">
    <div class="col s12">
      <h1 class="left">RÃ‰SEAU</h1>
    </div>
    <div class="col s3">
      <img src="img/chart.jpg" alt="" class="responsive-img"> <!-- notice the "circle" class -->
    </div>
    <div class="col s5 ">
      <h3 class="black-text">
        Liste d'utilisateurs
      </h3>
    </div>

      <table class="bordered">
          <thead>
              <tr>
                  <th>Username</th>
                  <th>Display name</th>
              </tr>
          </thead>
          <% users.forEach(function(user) {%>
              <tr>
                  <td>
                      <a href="/users/<%=user._id%>"><%=user.username%></a>
                  </td>
                  <td><%=user.displayName%></td>
              </tr>
          <% }) %>
      </table>
  </div>

  <div class="col s2 offset-s1 song-search">
      <h4 class="center"> Chercher un utilisateur </h4>

      <form id="search" action="/users" method="get">
          <div class="form-group">
              <label for="username">Username</label>
              <input type="text" class="form-control" id="username" name="username">
          </div>

          <div class="form-group">
              <label for="displayName">Display name</label>
              <input type="text" class="form-control" id="displayName" name="displayName">
          </div>
          <button form="search" type="submit" class="waves-effect waves-light btn light-blue lighten-1"><i class="material-icons right">search</i>Rechercher</button>
      </form>
  </div>
</div>
<% include partials/footer %>
